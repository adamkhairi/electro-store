{
  "name": "electrostock-pro",
  "version": "1.0.0",
  "description": "Multi-tenant Electronics Store Management SaaS Application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "shared/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:mobile": "cd mobile && bun run start",
    "build": "bun run build:shared && bun run build:frontend && bun run build:backend",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "build:shared": "bun run build:shared:types && bun run build:shared:utils",
    "build:shared:types": "cd shared/types && bun run build",
    "build:shared:utils": "cd shared/utils && bun run build",
    "test": "bun run test:frontend && bun run test:backend && bun run test:shared",
    "test:frontend": "cd frontend && bun test",
    "test:backend": "cd backend && bun test",
    "test:shared": "bun run test:shared:types && bun run test:shared:utils",
    "test:shared:types": "cd shared/types && bun test",
    "test:shared:utils": "cd shared/utils && bun test",
    "lint": "bun run lint:frontend && bun run lint:backend",
    "lint:frontend": "cd frontend && bun run lint",
    "lint:backend": "cd backend && bun run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "bun run type-check:frontend && bun run type-check:backend",
    "type-check:frontend": "cd frontend && bun run type-check",
    "type-check:backend": "cd backend && bun run type-check",
    "clean": "bun run clean:frontend && bun run clean:backend && bun run clean:shared",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:shared": "cd shared && rm -rf */dist */node_modules",
    "setup": "bun install && bun run setup:frontend && bun run setup:backend && bun run setup:mobile",
    "setup:frontend": "cd frontend && bun install",
    "setup:backend": "cd backend && bun install",
    "setup:mobile": "cd mobile && bun install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/electrostock-pro.git"
  },
  "keywords": [
    "saas",
    "electronics",
    "inventory",
    "pos",
    "multi-tenant",
    "e-commerce"
  ],
  "author": "ElectroStock Pro Team",
  "license": "PROPRIETARY"
}
