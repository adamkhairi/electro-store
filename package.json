{
  "name": "electrostock-pro",
  "version": "1.0.0",
  "description": "Multi-tenant Electronics Store Management SaaS Application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "mobile",
    "shared/*"
  ],
  "scripts": {
    "dev": "npx concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:mobile": "cd mobile && npm run start",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "npm run build:shared:types && npm run build:shared:utils",
    "build:shared:types": "cd shared/types && npm run build",
    "build:shared:utils": "cd shared/utils && npm run build",
    "test": "npm run test:frontend && npm run test:backend && npm run test:shared",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:shared": "npm run test:shared:types && npm run test:shared:utils",
    "test:shared:types": "cd shared/types && npm test",
    "test:shared:utils": "cd shared/utils && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check:frontend && npm run type-check:backend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "type-check:backend": "cd backend && npm run type-check",
    "clean": "npm run clean:frontend && npm run clean:backend && npm run clean:shared",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:shared": "cd shared && rm -rf */dist */node_modules",
    "setup": "bun install",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install",
    "setup:mobile": "cd mobile && npm install",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/electrostock-pro.git"
  },
  "keywords": [
    "saas",
    "electronics",
    "inventory",
    "pos",
    "multi-tenant",
    "e-commerce"
  ],
  "author": "ElectroStock Pro Team",
  "license": "PROPRIETARY"
}
